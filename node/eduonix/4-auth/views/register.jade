extends layout

block content
	h1 Register

	form(method='post', action='users/register', enctype='multipart/form-data')
		.form-group
			label Name
			input.form-control(name='name', type='text')
		.form-group
			label Email
			input.form-control(name='emailname', type='email')
		.form-group
			label Username
			input.form-control(name='username', type = 'text')
		.form-group
			label Password
			input.form-control(name='password', type='password')
		.form-group
			label Confirm Password
			input.form-control(name='password2', type='password')
		.form-group
			label Profile Image
			input.form-control(name='profileimage', type='image')
		input.btn.btn-primary(type='submit', value='Регистрация')